@model System.Data.Spatial.DbGeography

@if (Model != null)
{
    string latitute = Model.Latitude.HasValue ? Model.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "";
    string longitute = Model.Longitude.HasValue ? Model.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "";
    
    @Html.TextBox("", latitute + "," + longitute, new {@class = "editor-for-dbgeography form-control"})
}
else
{
    @Html.TextBox("", "", new {@class = "editor-for-dbgeography form-control"})
}