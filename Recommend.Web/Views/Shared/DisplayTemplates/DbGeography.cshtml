@model System.Data.Spatial.DbGeography

@using System.Globalization

@if (Model != null && Model.Latitude.HasValue && Model.Longitude.HasValue)
{
    @Html.TextBox("", Model.Latitude.Value.ToString("G", CultureInfo.InvariantCulture) + "," + Model.Longitude.Value.ToString("G", CultureInfo.InvariantCulture), new {@class = "display-for-dbgeography form-control", disabled = true})
}
else
{
    @Html.TextBox("", "n/a", new {disabled = true})
}
