<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap/base")
        @Styles.Render("~/Content/bootstrap/theme")
        @Styles.Render("~/Content/custom")
        @Scripts.Render("~/bundles/modernizr")
        

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            @Scripts.Render("~/bundles/respond")
        <![endif]-->
    </head>

    <body>  
     <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Recommend</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Add recomendation", "Add", "Recommendation")</li>
                    <li>@Html.ActionLink("Add place", "Add", "Place")</li>
                }
                
                <li>@Html.ActionLink("Recommendations", "Index", "Home")</li>
                <li>@Html.ActionLink("Places", "Index", "Place")</li>
                
                @*<li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Nav header</li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>*@
            </ul>
            @RenderSection("userinfo", required: false)
        </div><!--/.navbar-collapse -->
      </div>
    </div>

    @RenderSection("featured", required: false)

        <div class="container">
        
            @if (TempData["AlertSuccess"] != null || TempData["AlertInfo"] != null || TempData["AlertWarning"] != null || TempData["AlertDanger"] != null)
            {
                <div class="message-area">
                    @if (TempData["AlertSuccess"] != null)
                    {
                        <div class="alert alert-success">@TempData["AlertSuccess"]</div>
                    }
            
                    @if (TempData["AlertInfo"] != null)
                    {
                        <div class="alert alert-info">@TempData["AlertInfo"]</div>
                    }
            
                    @if(TempData["AlertWarning"] != null)
                    {
                        <div class="alert alert-warning">@TempData["AlertWarning"]</div>
                    }
            
                    @if (TempData["AlertDanger"] != null)
                    {
                        <div class="alert alert-danger">@TempData["AlertDanger"]</div>    
                    }    
                </div>    
            }
            
            @RenderBody()

            <hr>
            <footer>
                <p>&copy; 2013</p>
            </footer>
        </div> <!-- /container -->
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", required: false)
    </body>
</html>
